{
  "name": "mcp-client",
  "version": "1.0.0",
  "main": "dist/MCPClient.js",
  "scripts": {
    "build": "tsup",
    "test": "vitest run && tsc && jsr publish --dry-run --allow-dirty",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "MCP",
    "Client",
    "EventSource",
    "SSE"
  ],
  "type": "module",
  "author": "Frank Fiegel <frank@glama.ai>",
  "license": "MIT",
  "description": "An MCP client for Node.js",
  "module": "dist/MCPClient.js",
  "types": "dist/MCPClient.d.ts",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "reconnecting-eventsource": "^1.6.4",
    "strict-event-emitter-types": "^2.0.0",
    "zod": "^3.25.67"
  },
  "repository": {
    "url": "https://github.com/punkpeye/mcp-client"
  },
  "homepage": "https://glama.ai/mcp",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@sebbo2002/semantic-release-jsr"
    ]
  },
  "devDependencies": {
    "@sebbo2002/semantic-release-jsr": "^3.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.0.4",
    "@types/uri-templates": "^0.1.34",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.29.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eventsource-client": "^1.1.3",
    "fastmcp": "^3.5.0",
    "get-port-please": "^3.1.2",
    "jsr": "^0.13.4",
    "prettier": "^3.6.0",
    "semantic-release": "^24.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "tsup": {
    "entry": [
      "src/MCPClient.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  }
}
